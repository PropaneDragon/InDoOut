<Window x:Class="InDoOut_Desktop.UI.Windows.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InDoOut_Desktop.UI.Windows"
        xmlns:core="clr-namespace:InDoOut_Desktop.UI.Controls.Core"
        xmlns:background="clr-namespace:InDoOut_Desktop.UI.Controls.Background"
        xmlns:options="clr-namespace:InDoOut_Desktop.UI.Controls.Options"
        mc:Ignorable="d"
        Title="Settings" Height="1080" Width="500" WindowState="Normal" Background="#111" Foreground="White" MinWidth="500" MinHeight="500" WindowStartupLocation="CenterOwner" ShowActivated="True">
    <Grid>
        <Grid>
            <background:BackgroundImage Opacity="0.01"/>
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <Grid Margin="0,80,0,0">                    
                    <options:OptionsDisplay x:Name="Options_Program" />
                </Grid>
            </ScrollViewer>
        </Grid>
        <core:TitleBar x:Name="TitleBar_Main" HorizontalAlignment="Stretch" VerticalAlignment="Top" />
    </Grid>
</Window>
