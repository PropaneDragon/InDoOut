<UserControl x:Class="InDoOut_Desktop.UI.Controls.Options.OptionsDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InDoOut_Desktop.UI.Controls.Options"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DockPanel>
            <Border DockPanel.Dock="Top" Padding="16, 16, 16, 0">
                <TextBlock x:Name="Text_Title" Text="Title" Foreground="#66FFFFFF" FontFamily="Segoe UI Light" FontSize="22" />
            </Border>
            <Border DockPanel.Dock="Top" Padding="10">
                <WrapPanel x:Name="Wrap_Options" HorizontalAlignment="Center" />
            </Border>
        </DockPanel>
    </Grid>
</UserControl>
