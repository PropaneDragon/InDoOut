<UserControl x:Class="InDoOut_Desktop.UI.Controls.Sidebar.Sidebar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InDoOut_Desktop.UI.Controls.Sidebar"
             xmlns:search="clr-namespace:InDoOut_Desktop.UI.Controls.Search"
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="500" Background="Transparent" Loaded="UserControl_Loaded">
    <Grid>
        <Grid x:Name="Grid_UncollapsibleContent">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="{Binding Width, ElementName=ColumnDefinition_Extended}" />
            </Grid.ColumnDefinitions>
            <Border Grid.Column="1">
                <Border.Background>
                    <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
                        <GradientStop Color="#4111" Offset="0.6"/>
                        <GradientStop Color="#0111" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
        </Grid>
        <Grid x:Name="Grid_CollapsibleContent" Background="#3b77e4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition x:Name="ColumnDefinition_Extended" Width="64" />
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="70" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Border Grid.Row="0" Background="#33FFFFFF" BorderThickness="0,0,0,0">
                        <Border.BorderBrush>
                            <LinearGradientBrush EndPoint="1,0" StartPoint="0,0" MappingMode="RelativeToBoundingBox" SpreadMethod="Pad">
                                <GradientStop Color="Transparent"/>
                                <GradientStop Color="White" Offset="0.5"/>
                                <GradientStop Color="Transparent" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.BorderBrush>
                        <search:SearchBar SearchRequested="SearchBar_SearchRequested" />
                    </Border>
                    <Border Grid.Row="1">
                        <local:ItemList x:Name="ItemList_Functions" />
                    </Border>
                </Grid>
            </Border>
            <Border Grid.Column="1" Background="#33000000">
                <Grid>
                    <StackPanel x:Name="Stack_ButtonsBottom" VerticalAlignment="Bottom" Margin="0,0,0,20">
                        <Button x:Name="Button_TaskViewer" VerticalAlignment="Top" HorizontalAlignment="Center" FontFamily="Segoe MDL2 Assets" FontSize="30" Content="" ToolTip="Task viewer" Template="{DynamicResource Template_Buttons_Transparent}" Click="Button_TaskViewer_Click" Margin="0,8,0,0" />
                        <Button x:Name="Button_Settings" VerticalAlignment="Top" HorizontalAlignment="Center" FontFamily="Segoe MDL2 Assets" FontSize="30" Content="" ToolTip="Settings" Template="{DynamicResource Template_Buttons_Transparent}" Margin="0,8,0,0" />
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="{Binding Width, ElementName=ColumnDefinition_Extended}" />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="1">
                <StackPanel x:Name="Stack_ButtonsTop" Grid.Column="1" VerticalAlignment="Top" Margin="0,16,0,0">
                    <Button x:Name="Button_Collapse" VerticalAlignment="Top" HorizontalAlignment="Center" FontFamily="Segoe MDL2 Assets" FontSize="30" Content="" ToolTip="Sidebar" Template="{DynamicResource Template_Buttons_Transparent}" Click="Button_Collapse_Click" Padding="1,1,1,1" />
                    <Button x:Name="Button_SwitchMode" VerticalAlignment="Top" HorizontalAlignment="Center" FontFamily="Segoe MDL2 Assets" FontSize="30" Content="" ToolTip="Switch viewing mode" Template="{DynamicResource Template_Buttons_Transparent}" Click="Button_SwitchMode_Click" Padding="1,1,1,1" Margin="0,32,0,0" />
                    <Grid VerticalAlignment="Top" HorizontalAlignment="Center">
                        <Button x:Name="Button_RunProgram" VerticalAlignment="Top" HorizontalAlignment="Center" FontFamily="Segoe MDL2 Assets" FontSize="30" Content="" ToolTip="Run program" Template="{DynamicResource Template_Buttons_Transparent}" Click="Button_RunProgram_Click" Padding="1,1,1,1" Margin="0,8,0,0" />
                        <Button x:Name="Button_StopProgram" VerticalAlignment="Top" HorizontalAlignment="Center" FontFamily="Segoe MDL2 Assets" FontSize="30" Content="" ToolTip="Stop program" Template="{DynamicResource Template_Buttons_Transparent}" Click="Button_StopProgram_Click" Padding="1,1,1,1" Margin="0,8,0,0" />
                        <Button x:Name="Button_ProgramStopping" VerticalAlignment="Top" HorizontalAlignment="Center" FontFamily="Segoe MDL2 Assets" FontSize="30" Content="" ToolTip="Program stopping" Template="{DynamicResource Template_Buttons_Transparent}" Click="Button_StopProgram_Click" Padding="1,1,1,1" Margin="0,8,0,0" />
                    </Grid>
                    <Button x:Name="Button_NewProgram" VerticalAlignment="Top" HorizontalAlignment="Center" FontFamily="Segoe MDL2 Assets" FontSize="30" Content="" ToolTip="New program" Template="{DynamicResource Template_Buttons_Transparent}" Click="Button_NewProgram_Click" Padding="1,1,1,1" Margin="0,32,0,0" />
                    <Button x:Name="Button_SaveProgram" VerticalAlignment="Top" HorizontalAlignment="Center" FontFamily="Segoe MDL2 Assets" FontSize="30" Content="" ToolTip="Save program" Template="{DynamicResource Template_Buttons_Transparent}" Click="Button_SaveProgram_Click" Padding="1,1,1,1" Margin="0,8,0,0" />
                    <Button x:Name="Button_SaveProgramAs" VerticalAlignment="Top" HorizontalAlignment="Center" FontFamily="Segoe MDL2 Assets" FontSize="30" Content="" ToolTip="Save program as..." Template="{DynamicResource Template_Buttons_Transparent}" Click="Button_SaveProgramAs_Click" Padding="1,1,1,1" Margin="0,8,0,0" />
                    <Button x:Name="Button_OpenProgram" VerticalAlignment="Top" HorizontalAlignment="Center" FontFamily="Segoe MDL2 Assets" FontSize="30" Content="" ToolTip="Open program" Template="{DynamicResource Template_Buttons_Transparent}" Click="Button_OpenProgram_Click" Padding="1,1,1,1" Margin="0,8,0,0" />
                </StackPanel>                
            </Grid>            
        </Grid>
    </Grid>
</UserControl>
