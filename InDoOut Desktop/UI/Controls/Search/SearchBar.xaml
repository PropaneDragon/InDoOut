<UserControl x:Class="InDoOut_Desktop.UI.Controls.Search.SearchBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InDoOut_Desktop.UI.Controls.Search"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="400" Foreground="White" FontFamily="Segoe UI Light" FontSize="24">
    <Border>
        <DockPanel>
            <Button DockPanel.Dock="Right" FontFamily="Segoe MDL2 Assets" Content="" FontSize="24" VerticalAlignment="Center" HorizontalAlignment="Center" Padding="4" Margin="0,0,8,0" Template="{DynamicResource Template_Buttons_Transparent}" Click="Button_Click" />
            <TextBox x:Name="TextBox_Query" DockPanel.Dock="Left" Background="{x:Null}" BorderBrush="{x:Null}" Text="Search here" Foreground="White" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" CaretBrush="White" IsUndoEnabled="True" MaxLines="1" GotFocus="TextBox_Query_GotFocus" LostFocus="TextBox_Query_LostFocus" KeyUp="TextBox_Query_KeyUp"/>
        </DockPanel>
    </Border>
</UserControl>
