<Application x:Class="InDoOut_Desktop.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:InDoOut_Desktop"
             StartupUri="UI/Windows/MainWindow.xaml" ShutdownMode="OnMainWindowClose" Startup="Application_Startup">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Style/MainStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/InDoOutUICommon;component/Style/CommonStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/InDoOutUICommon;component/Style/ScrollBarStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/InDoOutUICommon;component/Style/ButtonStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
