<UserControl x:Class="InDoOut_Display.UI.Controls.ElementSelector.ElementItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InDoOut_Display.UI.Controls.ElementSelector"
             mc:Ignorable="d" 
             Width="350" Height="200" Foreground="White" Background="#3b77e4">
    <Grid>
        <Border Padding="2">
            <DockPanel>
                <Border DockPanel.Dock="Bottom" Padding="8">
                    <TextBlock x:Name="Text_Name" Text="Element" FontSize="16" FontFamily="Segoe UI Light" TextAlignment="Center" TextWrapping="NoWrap" TextTrimming="CharacterEllipsis"/>
                </Border>
                <Border DockPanel.Dock="Top" Padding="8" Background="#000">
                    <Viewbox x:Name="Viewbox_Container">
                        <Border x:Name="Border_Container" />
                    </Viewbox>
                </Border>
            </DockPanel>
        </Border>
    </Grid>
</UserControl>
