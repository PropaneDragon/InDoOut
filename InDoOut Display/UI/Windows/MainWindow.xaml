<Window x:Class="InDoOut_Display.UI.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InDoOut_Display"
        xmlns:splash="clr-namespace:InDoOut_Display.UI.Controls.Splash"
        xmlns:core="clr-namespace:InDoOut_UI_Common.Controls.Core;assembly=InDoOutUICommon"
        xmlns:sidebar="clr-namespace:InDoOut_Display.UI.Controls.Sidebar"
        xmlns:taskManager="clr-namespace:InDoOut_UI_Common.Controls.TaskManager;assembly=InDoOutUICommon"
        xmlns:background="clr-namespace:InDoOut_UI_Common.Controls.Background;assembly=InDoOutUICommon"
        mc:Ignorable="d"
        Title="Designer" Height="1080" Width="1920" Background="#111" WindowStartupLocation="CenterScreen" WindowState="Maximized" Loaded="Window_Loaded" SizeChanged="Window_SizeChanged" StateChanged="Window_StateChanged">
    <Grid>
        <background:BackgroundImage Opacity="0.01" />
        <taskManager:TaskView x:Name="TaskView_Main" />
        <core:TitleBar x:Name="TitleBar_Main" HorizontalAlignment="Stretch" VerticalAlignment="Top" />
        <sidebar:Sidebar x:Name="Sidebar_Main" HorizontalAlignment="Left" />
        <splash:SplashOverlay x:Name="Splash_Overlay" Visibility="Collapsed" />
    </Grid>
</Window>
